# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/lens

# Google Generative AI API key for report processing
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key_here

# Internal JWT secret for API authentication (minimum 32 characters)
INTERNAL_JWT_SECRET=your_very_secure_jwt_secret_key_here_at_least_32_chars

# Set to true to bypass data similarity checks (useful for development/testing)
# When false or undefined, normal production restrictions apply:
# - Reports with >85% similarity return cached results
# - Reports require at least 10KB of new data if similarity >70%
USE_LOCAL_API=false 